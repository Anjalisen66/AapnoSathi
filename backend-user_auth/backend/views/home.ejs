    <div style="text-align: center; margin-top: 20px;">
        <button onclick="logout()" type="submit" class="submit-btn">
            Logout
        </button>
    </div>

    <script>
        function logout() {
            // Clear session data (localStorage or sessionStorage)
            localStorage.removeItem("isLoggedIn");
            sessionStorage.removeItem("isLoggedIn");

            // Redirect to login page
            window.location.href = '/';

            // Ensure that after redirecting to the login page, the user cannot go back to the home page
            setTimeout(function() {
                // Replace the history entry with the login page, preventing the user from going back
                window.location.replace('/'); // Replaces the current page with the login page

                // Disable browser back button navigation
                window.history.pushState(null, null, window.location.href);
                window.onpopstate = function () {
                    window.history.pushState(null, null, window.location.href);
                };
            }, 100);
        }

        // Disable browser history navigation to prevent back button from going back to the home page
        if (window.history && window.history.pushState) {
            window.history.pushState(null, null, window.location.href);
            window.onpopstate = function () {
                window.history.pushState(null, null, window.location.href);
            };
        }
    </script>

